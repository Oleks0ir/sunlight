MainLayout:

<MainLayout@GridLayout>:
    cols:2
    padding: "10dp"

    Widget_Monocristaline_Power:
    Widget_Polycristaline_Power:
    Widget_Temperature:
    Widget_VoltAmpers:

<Widget_Monocristaline_Power@AnchorLayout>:
    size_hint: 0.5, 1

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Button:
            size_hint: .3, .1
            text: "Open-Curcuit voltage"

    RelativeLayout:
        ScrollView:
            orientation: "horizontal"
            size_hint: .7,1
            do_scroll_x: True
            do_scroll_y: False
            pos_hint: {"center_x": 0.5, "y": .05}

            VoltageGraph_Voc:





<Widget_Polycristaline_Power@AnchorLayout>:
    size_hint: 0.5, 1

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Button:
            size_hint: .3, .1
            text: "100 Om voltage"

    RelativeLayout:
        ScrollView:
            orientation: "horizontal"
            size_hint: .7, 1
            do_scroll_x: True
            do_scroll_y: False
            pos_hint: {"center_x": 0.5, "y": .05}

            VoltageGraph_Res:




<Widget_Temperature@AnchorLayout>:
    size_hint: 0.5, 1

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Button:
            size_hint: .3, .1
            text: "Polycristaline"

    RelativeLayout:
        ScrollView:
            orientation: "horizontal"
            size_hint: .7, 1
            do_scroll_x: True
            do_scroll_y: False
            pos_hint: {"center_x": 0.5, "y": .05}

            Temperature_Graph:



<Widget_VoltAmpers>:
    size_hint: 0.5, 1

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "top"
        Button:
            size_hint: .3, .1
            text: "Volt-Ampere"

    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"
        BoxLayout:
            spacing: "5dp"
            TextInput:
                size_hint: .3, .1
                text: "HHHH-MM-DD HH:MM:SS"
                id: timeInput


            Button:
                size_hint: .2, .1
                text: "Sendtime"
                on_press: root.sendDate(timeInput)

            Button:
                size_hint: .2, .1
                text: "Update Logs"
                on_press: root.updateLogs()

            ToggleButton:
                size_hint: .2, .1
                text: "Connect ESP"
                id: connected
                state: "normal"
                on_state: root.connect(self)


